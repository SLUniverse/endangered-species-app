<!-- details.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Species Details</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">

</head>
<body>
  <div class="container mt-5">
    <div class="card p-4 shadow">
      <div class="text-center mb-4">
        <h1 class="highlight-title"><%= species.name %></h1>
        <h5 class="highlight-subtitle mt-2"><%= species.scientificName %></h5>
        <p class="mt-2">
          <span class="<%=
            species.threatLevel === 'Critically Endangered' ? 'badge-danger' :
            species.threatLevel === 'Endangered' ? 'badge-warning' :
            species.threatLevel === 'Vulnerable' ? 'badge-vulnerable' :
            species.threatLevel === 'Extinct in the Wild' ? 'badge-extinct' :
            species.threatLevel === 'Least Concern' ? 'badge-success' : 'badge-unknown'
          %>"><%= species.threatLevel %></span>
        </p>
      </div>

      <div class="highlight-section">
        <p><strong>Habitat:</strong> <%= species.habitat %></p>
        <p><strong>Description:</strong> <%= species.description %></p>
      </div>

      <div class="text-center mt-4">
        <a href="/" class="btn btn-secondary btn-sm-custom">⬅️ Back</a>
        <a href="/edit/<%= species._id %>" class="btn btn-primary btn-sm-custom">✏️ Edit</a>
        <a href="/delete/<%= species._id %>" class="btn btn-danger btn-sm-custom">🗑️ Delete</a>
      </div>
    </div>
  </div>
</body>
</html>
